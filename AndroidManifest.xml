<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.msviewpart"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bookreal"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.msviewpart.Appstart"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.msviewpart.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity android:name="com.example.msviewpart.ListActivity" >
        </activity>
        <activity
            android:name="com.example.msviewpart.WhatsnewDoor"
            android:theme="@style/Anim_style2" />
        <activity
            android:name="com.example.msviewpart.Login"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="com.example.msviewpart.Whatsnew"
            android:theme="@style/Anim_style2" />
        <activity
            android:name="com.example.msviewpart.LoadingActivity"
            android:theme="@style/MyDialogStyle" />
        <activity
            android:name="com.example.msviewpart.ScanActivity"
            android:label="@string/title_activity_scan"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.example.msviewpart.Welcome"
            android:label="@string/title_activity_welcome" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false" />

</manifest>
